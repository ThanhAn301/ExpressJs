<div class="mt-4">
    <h3> My Courses </h3>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Level</th>
                <th scope="col" colspan="2">Time</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>the Bird</td>
                <td>{{this.createdAt}}</td>
                <td><a href="/courses/{{this._id}}/edit" class="btn btn-link">Fix</a></td>
                <td><a href="" class="btn btn-link" data-toggle="modal" data-id="{{this._id}}" data-target="#exampleModal">Delete</a></td>
            </tr>
            {{/each}}
        </tbody>        
    </table>
</div>



